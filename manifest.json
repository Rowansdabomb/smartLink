{
    "name": "Curl-link",
    "version": "1.0.0",
    "description": "Curate page content and share it with a link",
    "permissions": ["activeTab", "storage", "contextMenus", "tabs", "declarativeContent"],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "content_scripts": [{
        "js": ["globals.js", "common.js", "helpers.js", "dragElement.js", "goToLocation.js", "getDocumentSelection.js", "main.js"],
        "matches": ["http://*/*", "https://*/*"],
        "all_frames": false,
        "css": ["surlStyle.css"],
        "run_at": "document_end"
    }],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/Curl-icon-16.png",
            "32": "images/Curl-icon-32.png",
            "48": "images/Curl-icon-48.png",
            "128": "images/Curl-icon-128.png"
        }
    },
    "web_accessible_resources": ["popup.js"],
    "icons": {
        "16": "images/Curl-icon-16.png",
        "32": "images/Curl-icon-32.png",
        "48": "images/Curl-icon-48.png",
        "128": "images/Curl-icon-128.png"
    },
    "manifest_version": 2
}